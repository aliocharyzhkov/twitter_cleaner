{
  "manifest_version": 3,
  "name": "The Ad Blocker for X.com (Twitter)",
  "version": "1.2.1",
  "description": "It hides ads and promoted tweets to make X.com (Twitter) less noisy",
  "icons": {
    "16": "/images/logo16.png",
    "32": "/images/logo32.png",
    "48": "/images/logo48.png",
    "128": "/images/logo128.png"
  },
  "author": "Alexey Ryzhkov",
  "content_scripts": [
    {
      "matches": ["https://twitter.com/*"],
      "js": ["block_noise.js", "background.js"]
    }
  ],
  "homepage_url": "https://github.com/aliocharyzhkov/twitter_cleaner",
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "permissions": ["storage"]
}
